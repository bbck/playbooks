external_url 'https://git.bbck.net'

gitlab_rails['gitlab_email_enabled'] = true
gitlab_rails['gitlab_email_from'] = 'gitlab@bbck.net'
gitlab_rails['gitlab_email_reply_to'] = 'noreply@bbck.net'
gitlab_rails['smtp_enable'] = true
gitlab_rails['smtp_address'] = "email-smtp.us-east-1.amazonaws.com"
gitlab_rails['smtp_port'] = 465
gitlab_rails['smtp_user_name'] = "{{aws_access_key}}"
gitlab_rails['smtp_password'] = "{{aws_secret_key}}"
gitlab_rails['smtp_domain'] = "bbck.net"
gitlab_rails['smtp_authentication'] = "login"
gitlab_rails['smtp_tls'] = true
gitlab_rails['backup_keep_time'] = 604800
gitlab_rails['backup_upload_connection'] = {
  'provider' => 'AWS',
  'region' => 'us-east-1',
  'aws_access_key_id' => '{{aws_access_key}}',
  'aws_secret_access_key' => '{{aws_secret_key}}'
}
